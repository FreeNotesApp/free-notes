<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FreeNote" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_red</item>
        <item name="colorPrimaryVariant">@color/red_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FreeNote.Dark.A.Little" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/brown</item>
        <item name="android:windowBackground">@color/grey_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FreeNote.Dark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_1</item>
        <item name="colorPrimaryVariant">@color/gray_1</item>
        <item name="android:windowBackground">@color/gray_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_1</item>
        <item name="colorSecondaryVariant">@color/gray_1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextRadioButton" parent="Theme.FreeNote">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_margin</item>
        <item name="android:padding">@dimen/main_margin_half</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextTittle" parent="Theme.FreeNote">
        <item name="android:textColor">@color/red_red</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:paddingBottom">@dimen/main_margin_half</item>
        <item name="android:paddingLeft">@dimen/main_margin_half</item>
        <item name="android:paddingRight">@dimen/main_margin_half</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextText" parent="Theme.FreeNote">
        <item name="android:textColor">@color/red_red</item>
        <item name="android:textSize">@dimen/main_margin</item>
        <item name="android:padding">@dimen/main_margin_half</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
</resources>